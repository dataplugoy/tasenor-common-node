{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2020",
        "jsx": "react",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
